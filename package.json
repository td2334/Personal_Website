{
  "name": "trevor-dewall-portfolio",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "http-server -p 8080 -c-1",
    "dev": "browser-sync start --server --files \"css/*.css, *.html, js/*.js, components/*.html, pages/*.html\" --browser \"brave\"",
    "start": "npm-run-all --parallel dev",
    "format": "prettier --write \"./**/*.{ts,tsx,js,jsx,json,css,md,html}\"",
    "format:check": "prettier --check \"./**/*.{ts,tsx,js,jsx,json,css,md,html}\""
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3"
  }
}
